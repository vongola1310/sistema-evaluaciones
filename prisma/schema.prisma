generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Employee{
  id         Int @id @default(autoincrement())
  firstName  String
  lastName   String
  employeeNo String @unique
  evaluations Evaluation[]
}
model Evaluation {
  id        Int @id @default(autoincrement())
  employee Employee @relation(fields: [employeeId],references: [id])
  employeeId Int
}
